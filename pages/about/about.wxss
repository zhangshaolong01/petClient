.weapp-about {
  width: 100%;
  height: 100%;
  flex-wrap: wrap;
  justify-content: center;
  align-content: space-around;
  align-items: center;
}

.weapp-name {
  font-size: 50rpx;
  text-align: center;
  color: #555;
}

.webapp-intro {
  box-sizing: border-box;
  padding: 60rpx;
  height: 900rpx;
}

.webapp-intro-item {
  border: 2px dashed #13227a;
  display: flex;
  margin: 55rpx 50rpx 55rpx 50rpx;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  position: relative;
}

.webapp-bottom-item {
  border: 2px dashed #13227a;
  display: flex;
  margin: 55rpx 50rpx 55rpx 50rpx;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  position: relative;
}

.webapp-intro-title {
  margin-bottom: 10rpx;
  font-size: 32rpx;
  color: #666;
}

.webapp-intro-content {
  color: #ccc;
}
