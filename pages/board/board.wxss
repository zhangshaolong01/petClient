.slide swiper {
    height: 300rpx;
}
.slide-image {
    width: 98%;
    height: 600rpx;
}
.board {
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
    padding: 40rpx;
}
.board-item {
    flex: 1;
    cursor: pointer;
    border: 1rpx solid #eee;
    margin-top: 30rpx;
    padding: 30rpx;
}
.board-item image {
    flex: 1;
} 
.board-item image {
    height: 20rpx;
    width: 20rpx;
} 
.images {
    height: 50rpx;
    width: 50rpx;
}

.fd-bd-intro {
    font-size: 12px;
    text-align: justify;
    line-height: 1.5;
    color: #666;
}

.fd-bd-tag {
    display: flex;
}

.fd-bd-tag-item {
    padding: 5rpx 10rpx;
    margin-right: 15rpx;
    border: 1px solid #ccc;
    border-radius: 10rpx;
    color: #666;
}

.table {
  border: 0px solid darkgray;
  font-size: 12px;
  margin:10rpx 10rpx 10rpx 10rpx;
}

.tr {
  display: flex;
  width: 100%;
  height: 2.5rem;
  align-items: center;
  background-image: '../../images/arrowright.png';
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.bg-w {
  background: snow;
}

.th {
  width: 40%;
  justify-content: center;
  background: #ccc;
  color: #fff;
  display: flex;
  height: 1.5rem;
  align-items: center;
}