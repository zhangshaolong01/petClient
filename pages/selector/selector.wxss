/* pages/selector/selector.wxss */

.selectBox {
  height: 1.9rem;
  border: 1px solid #CCCCCC;
  border-radius: 10rpx;
  position: relative;
  padding-left: 10rpx;
  width: 60px;
  background-color: #F8F8F8;
}

.selectBox .select {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.selectBox .select .select_text {
  font-size: 30rpx;
  color: black;
  line-height: 28rpx;
  flex: 1;
}

.selectBox .select .select_img {
  width: 20rpx;
  height: 20rpx;
  display: block;
  transition: transform 0.3s;
}

.selectBox .select .select_img_rotate {
  transform: rotate(180deg);
}

.selectBox .optionBox {
  border: 1px solid #CCCCCC;
  background-color: #F8F8F8;
}

.selectBox .optionBox .option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-top: 1px solid #CCCCCC;
  padding: 10rpx;
  z-index: 9999;
}
